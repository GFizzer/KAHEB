<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/searchTagField"
        android:layout_width="306dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Custom tag (optional)..."
        android:inputType="textUri"
        android:paddingStart="12sp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/searchTagButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="#6835F1"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:text="Set"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/userAuthInfoLabel2"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:background="#E3E3E3"
        android:paddingStart="4sp"
        android:paddingEnd="8sp"
        android:text="User:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#5116BC"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eventUrlField"
        android:layout_width="306dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Event URL..."
        android:inputType="textUri"
        android:paddingStart="12sp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/checkEventUrlButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAuthTagField" />

    <TextView
        android:id="@+id/userAuthInfoLabel"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:background="#E3E3E3"
        android:paddingStart="4sp"
        android:paddingEnd="8sp"
        android:text="User:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#5116BC"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authValidationResult"
        android:layout_width="317dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:background="#F1F1F1"
        android:paddingStart="4sp"
        android:text="..."
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/userAuthInfoLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateAuthTagButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginTop="2dp"
        android:background="#6835F1"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:text="Save"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authValidationResult" />

    <Button
        android:id="@+id/checkEventUrlButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginTop="46dp"
        android:background="#6835F1"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:text="Check"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAuthTagButton" />

    <EditText
        android:id="@+id/updateAuthTagField"
        android:layout_width="306dp"
        android:layout_height="66dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="New authorization tag..."
        android:inputType="textUri"
        android:paddingStart="12sp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/updateAuthTagButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authValidationResult" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="397dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventUrlField">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/eventCheckResult"
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:paddingBottom="16sp"
                android:text="---"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="24sp">

            <TextView
                android:id="@+id/eventNameInfoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event name:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventNameDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#000000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/salesStartInfoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sales start:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salesStartDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#000000"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="412dp"
        android:layout_height="105dp"
        android:background="#6835F1"
        android:text="Start"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/progressStatusInfo"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/searchTagInfo"
        android:layout_width="97dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTagButton" />

</androidx.constraintlayout.widget.ConstraintLayout>