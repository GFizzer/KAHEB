<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userAuthInfoLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E3E3E3"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="User:"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#5116BC"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/authValidationResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#F1F1F1"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="..."
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/updateAuthTagField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="New authorization tag..."
                android:inputType="textUri"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:selectAllOnFocus="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/updateAuthTagButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:text="Save"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24sp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/eventUrlField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Event URL..."
                android:inputType="textUri"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:selectAllOnFocus="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/checkEventUrlButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:text="Check"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/eventCheckResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="8sp"
                        android:paddingEnd="8sp"
                        android:text="---"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/eventNameInfoLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8sp"
                        android:paddingEnd="8sp"
                        android:text="Event name:"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/eventNameDisplay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:paddingStart="2sp"
                        android:paddingEnd="8sp"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24sp">

                    <TextView
                        android:id="@+id/salesStartInfoLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8sp"
                        android:paddingEnd="8sp"
                        android:text="Sales start:"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/salesStartDisplay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:paddingStart="2sp"
                        android:paddingEnd="8sp"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1sp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/searchTagField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Search tag (optional)..."
                android:inputType="textUri"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/searchTagButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:text="Set"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/searchTagInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progressStatusInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36sp"
                android:layout_weight="1"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#6835F1"
                android:text="Start"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>